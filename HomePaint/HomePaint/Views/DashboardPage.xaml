<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomePaint.Views.DashboardPage">
    <ContentPage.Content>
        <StackLayout x:Name="MasterStacklayout" BackgroundColor="#4ea74a">
            <StackLayout x:Name="LogoAndLabel" VerticalOptions="Start">
                <Label x:Name="AppName" HorizontalTextAlignment="Center" FontSize="Large" Margin="10,10,10,10" Text="Home Paint 1.0" />
                <Image x:Name="image_logo" Margin="0,20,0,0" Source="Logo.png"/>
            </StackLayout>
            <StackLayout x:Name="Dash" VerticalOptions="Center" Margin="10,10,10,10">
                <Label x:Name="Door_Label" BackgroundColor="#D5ca4b" HorizontalTextAlignment="Center" FontSize="Medium" Text="Nincs ajtó hozzáadva"/>
                <Label x:Name="Window_Label" BackgroundColor="#D5ca4b" HorizontalTextAlignment="Center" FontSize="Medium" Text="Nincs ablak hozzáadva."/>
            </StackLayout>
            <StackLayout x:Name="WindowProperty" Margin="20,20,20,20" VerticalOptions="CenterAndExpand">
                <Button x:Name="Btn_Doors" Margin="20,20,20,20" CornerRadius="10" Text="Új ajtó hozzáadása" BackgroundColor="#DE9036" Clicked="DoorClicked"/>
                <Button x:Name="Btn_Window" Margin="20,0,20,20" CornerRadius="10" Text="Új ablak hozzáadása" BackgroundColor="#DE9036" Clicked="WindowClicked"/>
                <Label x:Name="Control" Margin="30,30,30,30" Text="" IsVisible="false" BackgroundColor="#d5ca4b" FontSize="Medium"/>
            </StackLayout>
            <StackLayout x:Name="Completed" VerticalOptions="EndAndExpand">
                <Button x:Name="Competed" Clicked="AllDataCounter" CornerRadius="10" Text="Összegzés" BackgroundColor="#DE9036" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>